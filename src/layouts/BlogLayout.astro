---
import type { MarkdownLayoutProps } from 'astro';

import Layout from './Layout.astro';

type Props = MarkdownLayoutProps<{
  title: string;
  author: string;
  date: string;
}>;

const { frontmatter } = Astro.props;
const { title } = frontmatter;
---

<Layout title={title}>
  <main class="prose mt-12 dark:prose-invert">
    <slot />
  </main>
</Layout>
